<h1>My expenses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Date</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @current_user_expenses.each do |expense| %>
      <tr>
        <td><%= expense.product_name %></td>
        <td><%= expense.date %></td>
        <td><%= expense.amount %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', expenses_path,:class=>"btn btn-default" %>
